<div class="container px-5 px-sm-0">
    <div class="row">
        <%= render "users/userinfo.html.erb", user: @user %>
        
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    <th colspan="3"></th>
                </thead>
                <tbody>
                    <%= @books.each do |book| %>
                    <tr>
                        <td>
                            <a href="/users/book.user.user_id">
                                <%= image_tag book.user.get_profile_image(100, 100) %>
                            </a>
                        </td>
                        <td>
                            <a href="/books/book.id">
                                <%= book.title %>
                            </a>
                        </td>
                        <td>
                            <%= book.opinion %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>